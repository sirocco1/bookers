<p class="notice"><%= notice %></p>
<h1>Books</h1>
<!-- 投稿一覧フォーム tableタグを使用　-->
<table>
	<thead>
		<tr>
			<th>Title</th>
			<th>Body</th>
			<th></th>
		</tr>
	</thead>

	<tbody>
		<% @books.each do |book| %>
			<tr>
				<td><%= book.title %></td>
				<td><%= book.body %></td>
				<td><%= link_to "Show", book_path(book.id), class: "show_#{book.id}"%></td>
				<td><%= link_to "Edit", edit_book_path(book.id), class: "edit_#{book.id}"%></td>
				<td><%= link_to "Destroy", book_path(book.id), class: "destroy_#{book.id}", method: :delete, data: {confirm: 'Are you sure?'} %></td>
			</tr>
		<% end %>
	</tbody>
</table>
<!-- 投稿一覧フォーム tableタグを使用　-->


<!-- 新規投稿フォーム　-->
<h2>New book</h2>

<%= form_for(@book) do |f| %>
	<div class ="field">
	<label for = "book_title">Title</label>
	<%= f.text_field :title, class: "book_title" %>
	</div>
	<div class ="field">
	<label for = "book_body">Body</label>
	<%= f.text_area :body, class: "book_body" %>
	</div>

<!-- brで横並び回避　-->
	<%= f.submit 'Create Book' %>
<% end %>
<!-- 新規投稿フォーム　-->